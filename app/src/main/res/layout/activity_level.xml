<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelActivity">

    <Button
        android:id="@+id/btrudnyBt"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:onClick="click"
        android:text="bardzo trudny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trudnyBt" />

    <Button
        android:id="@+id/blatwyBt"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:onClick="click"
        android:text="Bardzo łatwy"
        app:layout_constraintBottom_toTopOf="@+id/latwyBt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/powrotBt"
        android:layout_width="217dp"
        android:layout_height="80dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="92dp"
        android:onClick="click"
        android:text="powrót"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/trudnyBt"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:onClick="click"
        android:text="trudny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sredniBt" />

    <Button
        android:id="@+id/sredniBt"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:onClick="click"
        android:text="średni"
        app:layout_constraintBottom_toTopOf="@+id/powrotBt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/latwyBt"
        android:layout_width="217dp"
        android:layout_height="60dp"
        android:layout_marginBottom="25dp"
        android:onClick="click"
        android:text="łatwy"
        app:layout_constraintBottom_toTopOf="@+id/sredniBt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>